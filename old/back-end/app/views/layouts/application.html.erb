<!DOCTYPE html>
<html>
  <head>
    <title>TesterApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <%= link_to "All Zines", zines_path %> || <%= link_to "All Houses", houses_path %> ||
    <% if current_user %>
    <%= link_to "My Page", user_path(current_user) %> || <%= link_to "Sign Out", logout_path %>
    <% else %>
    <%= link_to "Sign In", new_user_session_path %>/<%= link_to "Sign Up", new_user_registration_path %>
    <% end %>
  </header>
    <%= yield %>
  </body>
</html>
